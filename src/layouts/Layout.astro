---
import { Footer } from '@/components/basic/Footer/Footer'
import BottomPanel from '@/components/common/BottomPanel.astro'
import '@/styles/tailwind.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="INIAD Alumni Meetings" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <BottomPanel />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
  }

  html {
    font-family: system-ui, sans-serif;
  }
</style>
