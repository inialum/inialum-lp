{
  "extends": [
    "@inialum",
    "plugin:astro/recommended",
    "plugin:storybook/recommended",
    "prettier"
  ],
  "parserOptions": {
    "project": ["./tsconfig.json", "./tsconfig.node.json"]
  },
  "ignorePatterns": ["!.storybook"],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      }
    }
  ]
}
